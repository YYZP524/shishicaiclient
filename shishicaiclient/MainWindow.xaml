<Window x:Class="shishicaiclient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonDock="http://schemas.xceed.com/wpf/xaml/avalondock"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" WindowState="Maximized" xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="23"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="用户">

                <MenuItem Name="sign" Header="注册" Click="sign_Click" />
                <MenuItem Name="login" Header="登陆" Click="login_Click" />
            </MenuItem>
            
          


        </Menu>
        <ToolBar Grid.Row="1"/>
        <avalonDock:DockingManager x:Name="dockingManager" Grid.Row="2" >
            <avalonDock:DockingManager.Theme>
                <avalonDock:AeroTheme/>
            </avalonDock:DockingManager.Theme>
            
            <avalonDock:LayoutRoot>
                <avalonDock:LayoutPanel Orientation="Horizontal">
                    <avalonDock:LayoutAnchorablePaneGroup DockWidth="300" Orientation="Vertical">
                        <avalonDock:LayoutAnchorablePane>
                            <avalonDock:LayoutAnchorable Title="开奖号码" CanClose="False" CanHide="False" x:Name="leftpanel" CanFloat="False" AutoHideMinWidth="300">
                                <ListBox x:Name="left_opencode"/>
                                
                            </avalonDock:LayoutAnchorable>

                        </avalonDock:LayoutAnchorablePane>

                    </avalonDock:LayoutAnchorablePaneGroup>
                    <avalonDock:LayoutDocumentPaneGroup x:Name="documentgroup" PropertyChanging="documentgroup_PropertyChanging">
                        <avalonDock:LayoutDocumentPane x:Name="avapane">

                            <avalonDock:LayoutDocument x:Name="maindocument" >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200" />
                                        <RowDefinition Height="235" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0">这是开奖</Label>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" x:Name="chat_stack" HorizontalAlignment="Stretch">
                                        <StackPanel x:Name="longhu_stack">
                                            
                                            <TabControl Height="230" Margin="2,0,0,0">
                                                <TabItem Header="龙虎">
                                                    <ScrollViewer x:Name="longhu_scroll" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" CanContentScroll="True" MouseEnter="longhu_scroll_MouseEnter" MouseLeave="longhu_scroll_MouseLeave">
                                                        
                                                    </ScrollViewer>
                                                </TabItem>
                                            </TabControl>
                                        </StackPanel>
                                        <StackPanel x:Name="daxiao_stack" Margin="2,0,0,0">
                                            <TabControl Height="230">
                                                <TabItem Header="大小">
                                                    <ScrollViewer x:Name="daxiao_scroll" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" CanContentScroll="True" MouseEnter="daxiao_scroll_MouseEnter" MouseLeave="daxiao_scroll_MouseLeave">

                                                    </ScrollViewer>
                                                </TabItem>
                                                <TabItem Header="大小序列">
                                                    
                                                </TabItem>
                                            </TabControl>
                                        </StackPanel>
                                        <StackPanel x:Name="danshuang_stack" Margin="2,0,0,0">
                                            <TabControl Height="230">
                                                <TabItem Header="单双">
                                                    <ScrollViewer x:Name="danshuang_scroll" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" CanContentScroll="True" MouseEnter="danshuang_scroll_MouseEnter" MouseLeave="danshuang_scroll_MouseLeave">

                                                    </ScrollViewer>
                                                </TabItem>
                                                <TabItem Header="单双序列">
                                                    
                                                </TabItem>
                                            </TabControl>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2">
                                        <Label >投注</Label>
                                    </StackPanel>
                                </Grid>
                            </avalonDock:LayoutDocument>
                        </avalonDock:LayoutDocumentPane>
                    </avalonDock:LayoutDocumentPaneGroup>
                    <avalonDock:LayoutAnchorablePaneGroup DockWidth="400" Orientation="Vertical">
                        <avalonDock:LayoutAnchorablePane >
                            <avalonDock:LayoutAnchorable Title="Tool 1" x:Name="rightpanel" CanFloat="False" CanHide="False" AutoHideMinWidth="400">
                                <StackPanel x:Name="rightstack"></StackPanel>
                            </avalonDock:LayoutAnchorable>
                        </avalonDock:LayoutAnchorablePane>
                    </avalonDock:LayoutAnchorablePaneGroup>
                </avalonDock:LayoutPanel>

            </avalonDock:LayoutRoot>
        </avalonDock:DockingManager>
    </Grid>  
</Window>
